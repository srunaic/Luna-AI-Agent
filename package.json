{
  "name": "luna-ai-agent",
  "displayName": "Luna AI Agent",
  "description": "Luna AI Agent - High-performance AI Orchestrator",
  "version": "0.1.15",
  "repository": {
    "type": "git",
    "url": "https://github.com/srunaic/Luna-AI-Agent.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "electron/main.js",
  "contributes": {
    "commands": [
      {
        "command": "luna.openChat",
        "title": "Open Luna Chat"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "luna.openChat",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "homepage": "./",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "cd webview-ui && npm run build",
    "dev-webview": "cd webview-ui && npm run dev",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true npm run electron",
    "build-electron": "npm run compile && npm run build-webview && electron-builder",
    "build-electron-win": "npm run compile && npm run build-webview && electron-builder --win --publish never",
    "release-win": "npm run compile && npm run build-webview && electron-builder --win --publish always",
    "build-electron-mac": "npm run compile && npm run build-webview && electron-builder --mac",
    "build-electron-linux": "npm run compile && npm run build-webview && electron-builder --linux",
    "package-electron": "echo \"Deprecated: Use npm run build-electron-win (electron-builder)\" && exit 1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.lunaai.agent",
    "productName": "Luna AI Agent",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "webview-ui/dist/**/*",
      "package.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/Luna.jpg",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "srunaic",
        "repo": "Luna-AI-Agent",
        "releaseType": "release"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/Luna.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/Luna.jpg"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}