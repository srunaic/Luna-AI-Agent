{
  "name": "luna-ai-agent",
  "displayName": "Luna AI Agent",
  "description": "Luna AI Agent - High-performance AI Orchestrator",
  "version": "0.1.26",
  "repository": {
    "type": "git",
    "url": "https://github.com/srunaic/Luna-AI-Agent.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "compile": "tsc -p ./",
    "build-webview": "cd webview-ui && npm run build",
    "release-win": "npm run build-webview && electron-builder --win --publish always"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.74.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.lunaai.agent",
    "productName": "Luna AI Agent",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "webview-ui/dist/**/*",
      "package.json",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "assets/Luna.jpg"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "srunaic",
        "repo": "Luna-AI-Agent",
        "releaseType": "release"
      }
    ]
  }
}
